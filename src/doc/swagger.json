{
	"openapi": "3.0.0",
  "info": {
    "title": "HNEE Project for Micro Weather Stations Data",
    "description": "This is an API written in Typescript and features authentication and authorization",
    "contact": {
      "name": "API",
      "email": "Hammad.Ali@hnee.de"
    },
    "version": "1.0.1"
  },
  "paths": {
	  "/api/users/register": {
      "post": {
        "tags": ["Registration"],
        "summary": "Creates a new user",
        "requestBody": {
          "description": "User information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New user record with ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {                  
                  "properties": {
                    "Error": {
                      "$ref": "#/components/schemas/ErrorResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Authenticates user and generates new JWT auth token",
        "requestBody": {
          "description": "User login credentials",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User record and JWT auth token that expires in 1 hour",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Returns list of users",
        "security": [
          {"bearerAuth": []}
        ],
        "responses": {
          "200": {
            "description": "A list of users (only admin is allowed to access the data with token based authentication)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponse"
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/me": {
      "get": {
        "tags": ["Users"],
        "summary": "Returns a user if exists",
        "security": [
          {"bearerAuth": []}
        ],
        "responses": {
          "200": {
            "description": "A copy of the requested user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{id}": {     
      "put": {
        "tags": ["Users"],
        "summary": "Updates a user profile with admin role only",
        "security": [
          {"bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of record that needs updated",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "User data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A copy of the updated user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Deletes user if exists with only Admin Role",
        "security": [
          {"bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of record that needs deleted",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Confirmation of successful operation"
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/me/{id}": {     
      "put": {
        "tags": ["Users"],
        "summary": "Updates own profile",
        "security": [
          {"bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of record that needs updated",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "User data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A copy of the updated user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/confirmation/{token}": {     
      "get": {
        "tags": ["Registration"],
        "summary": "Confirmation through email using token",
        
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "Token required for verification from Email Link",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],        
        "responses": {
          "200": {
            "description": "Email Confirmed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/email/resend": {
      "post": {
        "tags": ["Registration"],
        "summary": "Email Resend in case email not delivered",
        "requestBody": {
          "description": "User Email",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailResend"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email Link for confirmation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmailLink": {
                      "$ref": "#/components/schemas/EmailResendResponse"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {                  
                  "properties": {
                    "Error": {
                      "$ref": "#/components/schemas/ErrorResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/forgotPassword": {
      "post": {
        "tags": ["Password Reset"],
        "summary": "Email Resend for password reset",
        "requestBody": {
          "description": "User Email",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailResend"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email Link for password reset",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmailLink": {
                      "$ref": "#/components/schemas/EmailResendResponse"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {                  
                  "properties": {
                    "Error": {
                      "$ref": "#/components/schemas/ErrorResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/passwordChange/{token}": {     
      "put": {
        "tags": ["Password Reset"],
        "summary": "Password Reset through email using token",
        "requestBody": {
          "description": "New Password",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPassword"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "Token required for Password Reset",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],        
        "responses": {
          "200": {
            "description": "Password Reset",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/search": {
      "post": {
        "tags": ["Users"],
        "summary": "Search results from the database",
        "security": [
          {"bearerAuth": []}
        ],
        "requestBody": {
          "description": "email, or first name or last name",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserSearch"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Users data availible in the database for the requested search",
            "content": {
              "application/json": {                
                "schema": {
                  "type": "array",
                  "properties": {
                    "users":{
                     "type": "array",
                     "items":{
                       "$ref": "#/components/schemas/User"
                     }
                    },
                    "total": {
                      "type": "number"
                    }
                  }                  
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/weatherData": {
      "post": {
        "tags": ["Weather Data"],
        "summary": "Weather data search for particular station and dates",
        "requestBody": {
          "description": "Weather Data Search",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherDataInputs"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucessfully fetch the requested data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherDataSearchResponse"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/weatherData/lastSevenDays": {
      "get": {
        "tags": ["Weather Data"],
        "summary": "Returns Last Seven Days Weather Data",       
        "responses": {
          "200": {
            "description": "Sucessfully fetch the requested data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherDataSearchResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
    
  },
  "components": {
	  "schemas": {		  
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },          
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean",
            "default": false
          },
          "confirmation": {
            "type": "boolean",
            "default": false
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "UserConfirmed": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },          
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean",
            "default": false
          },
          "confirmation": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "UserInput": {
        "type": "object",
        "properties": {          
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },          
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean"
          },
          "confirmation": {
            "type": "boolean"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "WeatherDataInputs": {
        "type": "object",
        "properties": {
          "StationName": {
            "type": "string",
            "example": "Buche"
          },
          "StartDay": {
            "type": "string",
            "example": "2021-11-18"
          },
          "EndDay": {
            "type": "string",
            "example": "2021-11-19"
          }
        }
      },
      "UserSearch": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },
      "EmailResend": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "EmailResendResponse": {
        "type": "object",
        "properties": {
          "emailLink": {
            "type": "string"
          }
        }
      },
      "NewPassword": {
        "type": "object",
        "properties": {          
          "password": {
            "type": "string"
          }
        }
      }, 
           
      "LoginResponse": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/User"
          },
          "tokens":{
            "type": "object",
            "properties": {
              "accessToken":{
                "type": "string"
              },
              "refreshToken":{
                "type": "string"
              }
            }
          },
          "errors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "WeatherDataSearchResponse": {
        "type": "object",
        "required": [
          "header",
          "data"
        ],
        "properties": {
          "header": {
        "type": "object",
        "properties": {
          "k1": {
            "type": "string", 
            "example": "Power - V"
          },
          "k2": {
            "type": "string",
            "example": "Cold junction - deg C"
          },
          "k3": {
            "type": "string",
            "example": "Lufttemp_u - "
          },          
          "k4": {
            "type": "string",
            "example": "Lufttemp_u - Â°C"
          },
          "k5": {
            "type": "string",
            "example": "Luftfeuchte_o - %rF "
          },
          "k6": {
            "type": "string",
            "example": "Luftfeuchte_u - %rF"
          },
          "k7": {
            "type": "string",
            "example": "Rain#@15m - mm"
          },
          "k8": {
            "type": "string",
            "example": "Windgeschwindigkeit#@15m - m/s"
          },
          "k9": {
            "type": "string",
            "example": "PAR_o - mV"
          },
          "k10": {
            "type": "string",
            "example": "PAR_u - mV"
          },
          "k11": {
            "type": "string",
            "example": "Theta_10 - %"
          },
          "k12": {
            "type": "string",
            "example": "Theta_25 - %"
          },
          "k13": {
            "type": "string",
            "example": "Theta_55 - %"
          },
          "k14": {
            "type": "string",
            "example": "Theta_115 - %"
          },
          "k15": {
            "type": "string",
            "example": "SoilTemp_10 - deg C"
          },
          "k16": {
            "type": "string",
            "example": "SoilTemp_25 - deg C"
          },
          "k17": {
            "type": "string",
            "example": "SoilTemp_55 - deg C"
          },
          "k18": {
            "type": "string",
            "example": "SoilTemp_115 - deg C"
          },
          "k19": {
            "type": "string",
            "example": "pF_10 - pF"
          },
          "k20": {
            "type": "string",
            "example": "pF_25 - pF"
          },
          "k21": {
            "type": "string",
            "example": "pF_55 - pF"
          },
          "k22": {
            "type": "string",
            "example": "pF_115 - pF"
          },
          "k23": {
            "type": "string",
            "example": "-"
          },
          "k24": {
            "type": "string",
            "example": "-"
          },
          "k25": {
            "type": "string",
            "example": "-"
          },
          "dateTime": {
            "type": "string",
            "example": "Datetime"
          }
        }
      
          },
          "data":{
            "type": "array"
            
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/User"
          }
        }
      },           
      "ErrorResponse":{
         "type": "object",
        "required": [
          "message",
          "status"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "minimum": 100,
            "maximum": 600
          }
        }
      }      
	  },
    "responses": {},
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}