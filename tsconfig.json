{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "./build",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "lib": [
            "es2017"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@utils/*": [
                "utils/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@middlewares/*": [
                "middlewares/*"
            ],
            "@config/*": [
                "config/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false
}